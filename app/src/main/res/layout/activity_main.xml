<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2pt"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/dashbaord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2pt"
        android:background="@color/textInputBackColor"
        android:ems="10"
        android:gravity="right|center_vertical"
        android:inputType="number"
        android:paddingTop="50pt"
        android:selectAllOnFocus="false"
        android:text="0"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2pt"
            android:layout_marginRight="2pt"
            android:layout_marginBottom="2pt"
            android:gravity="center_vertical|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/operationColor"
                android:onClick="acOp"
                android:padding="5pt"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/plusminus"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/operationColor"
                android:onClick="numClick"
                android:padding="5pt"
                android:text="+/-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/percent"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/operationColor"
                android:onClick="perOp"
                android:padding="5pt"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/div"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/operationColor"
                android:onClick="opEvent"
                android:padding="5pt"
                android:text="/"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2pt"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num7"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:onClick="numClick"
                android:padding="5pt"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/num8"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:onClick="numClick"
                android:padding="5pt"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/num9"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:onClick="numClick"
                android:padding="5pt"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/mul"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/operationColor"
                android:onClick="opEvent"
                android:text="X"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2pt"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num4"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:onClick="numClick"
                android:padding="5pt"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/num5"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:onClick="numClick"
                android:padding="5pt"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/num6"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:onClick="numClick"
                android:padding="5pt"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/sub"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/operationColor"
                android:onClick="opEvent"
                android:padding="5pt"
                android:text="-"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2pt"
            android:layout_marginTop="2pt"
            android:layout_marginRight="2pt"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num1"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:onClick="numClick"
                android:padding="5pt"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/num2"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:onClick="numClick"
                android:padding="5pt"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/num3"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/numberColor"
                android:onClick="numClick"
                android:padding="5pt"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/sum"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/operationColor"
                android:onClick="opEvent"
                android:padding="5pt"
                android:text="+"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2pt"
        android:gravity="top|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num0"
            android:layout_width="80pt"
            android:layout_height="40pt"
            android:layout_margin="1pt"
            android:layout_weight="2"
            android:background="@color/numberColor"
            android:onClick="numClick"
            android:padding="4pt"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/numdot"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_margin="1pt"
            android:layout_weight="1"
            android:background="@color/numberColor"
            android:onClick="numClick"
            android:padding="5pt"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_margin="1pt"
            android:layout_weight="1"
            android:background="@color/equalSignColor"
            android:onClick="opEqual"
            android:padding="5pt"
            android:text="="
            android:textColor="@color/numberColor"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>